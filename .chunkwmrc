#!/bin/bash

#
# NOTE: any 'chunkc' command that is run from this config file
#       that is NOT 'chunkc core::<..>' or 'chunkc set ..'
#       MUST be put in the background using &
#
#       e.g:
#       chunkc tiling::rule --owner Finder --name Copy --state float &
#

#
# NOTE: specify the absolutepath of the file to use for logging.
#       'stdout' or 'stderr' can be used instead of an actual filepath.
#

chunkc core::log_file stdout

#
# NOTE: specify the desired level of logging.
#
#       - none, debug, profile, warn, error
#

chunkc core::log_level warn

#
# NOTE: specify the absolutepath to the directory to use when loading a plugin.
#

chunkc core::plugin_dir /usr/local/opt/chunkwm/share/chunkwm/plugins

#
# NOTE: if enabled, chunkwm will monitor the specified plugin_dir
#       and automatically reload any '.so' file that is changed.
#

chunkc core::hotload 1
chunkc core::unload border.so
chunkc core::unload tiling.so

#
# NOTE: the following are config variables for the chunkwm-tiling plugin.
#

chunkc set custom_bar_enabled 0
chunkc set custom_bar_all_monitors 0
chunkc set custom_bar_offset_top 0
chunkc set custom_bar_offset_bottom 0
chunkc set custom_bar_offset_left 0
chunkc set custom_bar_offset_right 0

chunkc set global_desktop_mode bsp
chunkc set global_desktop_offset_top 20
chunkc set global_desktop_offset_bottom 20
chunkc set global_desktop_offset_left 20
chunkc set global_desktop_offset_right 20
chunkc set global_desktop_offset_gap 20

#
# NOTE: syntax for desktop-specific settings
#
# chunkc set 2_desktop_mode                monocle
# chunkc set 5_desktop_mode                float
# chunkc set 3_desktop_offset_top          190
# chunkc set 3_desktop_offset_bottom       190
# chunkc set 3_desktop_offset_left         190
# chunkc set 3_desktop_offset_right        190
# chunkc set 3_desktop_offset_gap          30
#

#
# NOTE: the following are config variables for the chunkwm-border plugin.
#
# NOTE: syntax for `focused_border_outline` setting
#       0 = false, inline border
#       1 = true, outline border
#

chunkc set focused_border_color 0xff5a5a5a
chunkc set focused_border_width 4
chunkc set focused_border_radius 6
chunkc set focused_border_outline 0

chunkc set preselect_border_color 0xffd75f5f
chunkc set preselect_border_width 5
chunkc set preselect_border_radius 6
chunkc set preselect_border_outline 0

chunkc set focused_border_skip_floating 1
chunkc set focused_border_skip_monocle 1

#
# NOTE: the following are config variables for the chunkwm-ffm plugin.
#

chunkc set ffm_bypass_modifier shift
chunkc set ffm_standby_on_float 1
# chunkc set ffm_disable_autoraise 0

#
# NOTE: specify plugins to load when chunkwm starts.
#

chunkc core::load border.so
chunkc core::load tiling.so
# chunkc core::load ffm.so

chunkc set desktop_padding_step_size 10.0
chunkc set desktop_gap_step_size 5.0

chunkc set bsp_spawn_left 0
chunkc set bsp_optimal_ratio 1.618
chunkc set bsp_split_mode optimal
chunkc set bsp_split_ratio 0.5

chunkc set monitor_focus_cycle 1
chunkc set window_focus_cycle monitor

chunkc set mouse_follows_focus off
chunkc set window_float_next 0
chunkc set window_region_locked 1

chunkc set mouse_move_window \"ctrl 1\"
chunkc set mouse_resize_window \"ctrl alt 1\"
chunkc set mouse_motion_interval 35


#
# NOTE: sample rules for the tiling plugin
#

chunkc tiling::rule --owner Finder --state float
chunkc tiling::rule --role AXDialog --state float
chunkc tiling::rule --owner iTunes --name MiniPlayer --state float
chunkc tiling::rule --name \"Developer Tools\" --state float
chunkc tiling::rule --name \"Launch Application\" --state float
chunkc tiling::rule --name \"Preferences\" --state float
chunkc tiling::rule --owner \"Karabiner-Elements\" --state float
chunkc tiling::rule --owner Stickies --state float
chunkc tiling::rule --owner Couleurs --state float
chunkc tiling::rule --owner Pixave --state float
chunkc tiling::rule --owner Mail --state float
chunkc tiling::rule --owner \"The Unarchiver\" --state float
chunkc tiling::rule --owner \"App Store\" --state float
chunkc tiling::rule --owner \"System Preferences\" --state float
chunkc tiling::rule --owner \"QuickTime Player\" --state float
chunkc tiling::rule --owner Preview --state float
chunkc tiling::rule --owner Fork --state float
chunkc tiling::rule --owner \"Alfred Preferences\" --state float
chunkc tiling::rule --owner Front --name \"New Message\" --state float