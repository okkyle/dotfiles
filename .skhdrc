:: default : chunkc border::color 0xff5a5a5a

# Default Shortcut 	Description
# mod1 	option + shift
# mod2 	ctrl + option + shift

# order 
# shift + ctrl + alt + cmd

# Focus
shift + alt - insert : chunkc tiling::window --focus prev
shift + alt - pageup : chunkc tiling::window --focus next

shift + alt - home : chunkc tiling::window --focus north
shift + alt - end : chunkc tiling::window --focus south
shift + alt - delete : chunkc tiling::window --focus west
shift + alt - pagedown : chunkc tiling::window --focus east

# Move to monitor
ctrl + alt - left : chunkc tiling::window --send-to-monitor next;
ctrl + alt - right : chunkc tiling::window --send-to-monitor prev;
# Move to desktop
shift + ctrl + alt - left : chunkc tiling::window --send-to-desktop next;
shift + ctrl + alt - right : chunkc tiling::window --send-to-desktop prev;

# Swap windows
ctrl + alt + cmd - left : chunkc tiling::window --swap west;
ctrl + alt + cmd - right : chunkc tiling::window --swap east;
ctrl + alt + cmd - down : chunkc tiling::window --swap south;
ctrl + alt + cmd - up : chunkc tiling::window --swap north;
# Warp windows
shift + alt + cmd - left : chunkc tiling::window --warp west;
shift + alt + cmd - right : chunkc tiling::window --warp east;
shift + alt + cmd - down : chunkc tiling::window --warp south;
shift + alt + cmd - up : chunkc tiling::window --warp north;

# Toggle float
shift + alt - t : chunkc tiling::window --toggle float;
shift + alt - f : chunkc tiling::window --toggle fullscreen;
shift + alt - s : chunkc tiling::window --toggle sticky;
# shift + alt - q : chunkc tiling::window --toggle fade;

# rotate tree
ctrl + alt + cmd - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
ctrl + alt + cmd - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
ctrl + alt + cmd - x : chunkc tiling::desktop --mirror horizontal

# fast focus desktop
# cmd + ctrl - x : chunkc tiling::desktop --focus $(chunkc get _last_active_desktop)
ctrl + cmd - left : chunkc tiling::monitor -f prev
ctrl + cmd - right : chunkc tiling::monitor -f next

ctrl + cmd - 0x33 : chunkc tiling::desktop --annihilate

# create desktop, move window and follow focus
ctrl + cmd - m : chunkc tiling::desktop --create;\
                  id=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                  chunkc tiling::window --send-to-desktop $(echo ${id##* });\
                  chunkc tiling::desktop --focus $(echo ${id##* })
# create desktop and follow focus
ctrl + cmd - n : chunkc tiling::desktop --create;\
                id=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                chunkc tiling::desktop --focus $(echo ${id##* })


# set insertion point for focused container
ctrl + alt - escape : chunkc tiling::window --use-insertion-point cancel
ctrl + alt - left : chunkc tiling::window --use-insertion-point west
ctrl + alt - down : chunkc tiling::window --use-insertion-point south
ctrl + alt - up : chunkc tiling::window --use-insertion-point north
ctrl + alt - right : chunkc tiling::window --use-insertion-point east


# Increase padding
ctrl + alt + cmd - 0x1B : chunkc tiling::desktop --padding inc

# Decrease padding
ctrl + alt + cmd - 0x18 : chunkc tiling::desktop --padding dec

# Toggle offset
ctrl + alt + cmd - 0 : chunkc tiling::desktop --toggle offset

# Remove border when doing a screenshot
cmd + shift - 4 -> : chunkc border::clear
alt - escape : chunkc border::clear

# defines a new mode 'resize' with an on_enter command, that captures keypresses
:: resize @ : chunkc border::color 0xff24ccaa

# from 'default' mode, activate mode 'resize'
# (this is the key combination you want to use to enter resize mode)
ctrl + alt - r ; resize 

# from 'resize' mode, activate mode 'default'
# (this is the keypress required to leave resize mode)
resize < ctrl + alt - r ; default

# increase region size
resize < ctrl - left : chunkc tiling::window --use-temporary-ratio 0.025 --adjust-window-edge west
resize < ctrl - down : chunkc tiling::window --use-temporary-ratio 0.025 --adjust-window-edge south
resize < ctrl - up : chunkc tiling::window --use-temporary-ratio 0.025 --adjust-window-edge north
resize < ctrl - right : chunkc tiling::window --use-temporary-ratio 0.025 --adjust-window-edge east

# decrease
resize < alt - right : chunkc tiling::window --use-temporary-ratio -0.025 --adjust-window-edge west
resize < alt - up : chunkc tiling::window --use-temporary-ratio -0.025 --adjust-window-edge south
resize < alt - down : chunkc tiling::window --use-temporary-ratio -0.025 --adjust-window-edge north
resize < alt - left : chunkc tiling::window --use-temporary-ratio -0.025 --adjust-window-edge east