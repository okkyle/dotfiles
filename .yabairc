#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_border                on
yabai -m config window_border_width          2
yabai -m config active_window_border_color   0xff5a5a5a
yabai -m config normal_window_border_color   0x005a5a5a
yabai -m config insert_window_border_color   0xffd75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
# yabai -m config mouse_modifier               alt
# yabai -m config mouse_action1                move
# yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  20
yabai -m config bottom_padding               20
yabai -m config left_padding                 20
yabai -m config right_padding                20
yabai -m config window_gap                   20

# Rules

# yabai -m rule --add label="1" app="Finder" manage=off border=off
yabai -m rule --add label="2" title="Launch Application" manage=off border=off
yabai -m rule --add label="3" title="Preferences" manage=off border=off
yabai -m rule --add label="4" app="Karabiner-Elements" manage=off border=off
yabai -m rule --add label="5" app="Stickies" manage=off border=off
yabai -m rule --add label="6" app="Couleurs" manage=off border=off
yabai -m rule --add label="7" app="Pixave" manage=off border=off
yabai -m rule --add label="8" app="Mail" manage=off border=off
yabai -m rule --add label="9" app="The Unarchiver" manage=off border=off
yabai -m rule --add label="10" app="App Store" manage=off border=off
yabai -m rule --add label="11" app="System Preferences" manage=off border=off
yabai -m rule --add label="12" app="QuickTime Player" manage=off border=off
yabai -m rule --add label="13" app="Preview" manage=off border=off
yabai -m rule --add label="14" app="Fork" manage=off border=off
yabai -m rule --add label="15" app="Pritunl" manage=off border=off
yabai -m rule --add label="16" app="Alfred Preferences" manage=off border=off
yabai -m rule --add label="17" app="Front" title="New Message" manage=off border=off
yabai -m rule --add label="18" app="Flotato" manage=off border=off

echo "yabai configuration loaded.."